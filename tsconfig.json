{
  "compilerOptions": {
    "module": "esnext",                    
    "target": "es6",                          
    "lib": ["es6"],                     
    "rootDir": "src",
    "allowJs": true,
    "strict": true,         
    "noImplicitAny": true,
    "esModuleInterop": true,
    "downlevelIteration": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "dist",
    "node_modules"
  ]
}